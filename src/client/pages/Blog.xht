<script>

   let articles;

   function onMount(){
      fetch('http://localhost:3000/posts')
      .then(response => response.json())
      .then(data => articles = data);
   }

</script>

<h2>Blog</h2>
{#if articles}
<ul>
    {#each articles as article}
        <li><a href={`blog/${article.id}`}>{article.title}</a></li>
    {/each}
</ul>
{:else}
<p>Loading</p>
{/if}